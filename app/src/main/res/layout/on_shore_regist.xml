<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:paddingTop="5dp"
        android:gravity="center"
        android:background="@color/background_grey"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pic_photo"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="9"
            android:layout_marginLeft="10dp" />


        <ImageView
            android:id="@+id/take_photo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/photo_pic" />
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:text="报修区域选择"
            />

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="10dp"
            android:drawableRight="@mipmap/icon_public__repais_area"
            android:text="公共区域" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="报修类型选择"
            android:textSize="10dp"

            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_public__repais_area"
            android:text="请选择报修的类型"
            android:textSize="10dp" />



        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="联系人"
            android:textSize="10dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:drawableRight="@mipmap/icon_public__repais_area"
            android:text="请填写联系人姓名"
            android:textSize="10dip"

            />

        </LinearLayout>

        <Button
            android:id="@+id/ssubmit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/border_bt"
            android:text="提交"
            android:textSize="10dp"
            android:textColor="@color/white" />

</LinearLayout>